!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    :css
      .center{
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
      }
      .collapsible {
        background-color: #777;
        color: white;
        cursor: pointer;
        padding: 10px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 12px;
      }
      
      .active, .collapsible:hover {
        background-color: #555;
      }
      
      .collapsible:after {
        content: '\002B';
        color: white;
        font-weight: bold;
        float: right;
        margin-left: 5px;
      }
      
      .active:after {
        content: "\2212";
      }

      .content {
        padding: 0 18px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
        background-color: #f1f1f1;
      }

      body {
        margin: 0;
        font-family: Geneva;
      }
      
      .banner {
        overflow: hidden;
        background-color: #FFFFFF;
        height: 50px;
      }
      
      .topnav {
        overflow: hidden;
        background-color: #500000;
      }
      
      .topnav b {
        float: left;
        width: 23.25%;
        color: #f2f2f2;
        text-align: center;
        padding: 10px 12px;
        text-decoration: none;
        font-size: 17px;
      }
      
      .topnav b:hover {
        background-color: #8a0000;
        color: white;
      }
      
      .topnav b.active {
        background-color: #8a0000;
        color: white;
      }

  %body
    .banner{:style => "padding-left:15px; padding-top:10px;"}
      %h{:href => "#index", :style => "color:#500000; font-size: 30px;"} CSE GRAD NETWORKING SITE
    .topnav
      %b=link_to "Home", students_index_url, style: 'color:#FFFFFF; text-decoration:none;'
      %b=link_to "Search", students_search_url, style: 'color:#FFFFFF;text-decoration:none;'
      %b=link_to "Messages", students_message_url, style: 'color:#FFFFFF;text-decoration:none;'
      - if @introMsg != "Guest"
        %b=link_to "Profile", students_profile_url, style: 'color:#FFFFFF;text-decoration:none;'
    %h2 My Profile

    %row
      %column
        %h3 "#{@student.firstName} #{@student.lastName}"
        %h3= "Class of #{@student.classYear}"
        %img= image_tag @student.profilePic
        - if @hasOwnership
          %h3= link_to "Edit Your Profile", edit_student_path(id: @student.id)
        - else
          %h3= link_to "Send a Message", students_message_url
        
      %column
        %p= @student.intro
        - @display.each do |field|
          %h3 #{field}: #{@student.send(field)}